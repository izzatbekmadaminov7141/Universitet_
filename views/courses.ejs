<%- include('Layout/head.ejs') %>
<header>
  <nav class="bg-[#333]">
    <div class="container mx-auto flex justify-between items-center py-5">
      <h1 class="text-white text-3xl">University Courses</h1>
      <ul class="flex gap-5 items-center text-white text-2xl">
        <li>
          <a href="/">Log Out</a>
        </li>
        <li>
          <a
            href=""
            class="flex gap-2 items-center border p-4 rounded bg-white text-black"
          >
            <i class="bx bxs-user-circle text-3xl"></i> <%= student.username%>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
<main>
  <div class="container mx-auto">
    <div class="flex justify-center items-center gap-10 h-[70vh]">
      <% courses.forEach(course => { %>
      <div class="w-[300px] bg-red border rounded p-5">
        <img
          src="https://cdn-icons-png.flaticon.com/512/25/25694.png"
          class="w-[100%]"
          alt=""
        />
        <h1 class="bg-red-500 py-5 text-center text-white">
          Welcome <%= course.course_name %>
        </h1>
        <p>Instructor: <%= course.instructor %></p>
        <p>Schedule: <%= course.schedule %></p>
        <p>Max Students: <%= course.max_students %></p>
        <form action="/application" method="post">
          <input type="hidden" name="course_id" value="<%= course.id %>" />
          <input type="hidden" name="user_id" value="<%= student.id %>" />
          <button
            class="px-4 py-2 bg-blue-500 text-white my-2 block w-[60%] rounded"
          >
            Kursga yozilish
          </button>
        </form>
      </div>
      <%})%>
    </div>
  </div>
</main>
<%- include('Layout/main.ejs') %>
